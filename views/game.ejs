<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="application-name" content="Simple Javascript Games" />
    <title>Try Out The Game</title>
    <link rel="shortcut icon" href="./assets/icon.ico" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/game.css" />
  </head>
  <body>
    <header>
      <nav>
        <div class="back-button">
          <a href="/home">
            <h2><</h2>
          </a>
        </div>
        <div class="logo">
          <img src="./assets/logo.png" alt="" />
        </div>
        <div class="title">
          <h1>ROCK PAPER SCISSORS</h1>
        </div>
      </nav>
    </header>
    <div class="container">
      <div class="main">
        <div class="janken">
          <div class="janken-title">
            <h2>PLAYER</h2>
          </div>
          <div class="janken_choice">
            <div class="choice rock">
              <button>
                <img
                  height="128px"
                  width="128px"
                  src="./assets/batu.png"
                  alt="rock"
                />
              </button>
            </div>
            <div class="choice paper">
              <button>
                <img
                  height="128px"
                  width="128px"
                  src="./assets/kertas.png"
                  alt="paper"
                />
              </button>
            </div>
            <div class="choice scissors">
              <button>
                <img
                  height="128px"
                  width="128px"
                  src="./assets/gunting.png"
                  alt="scissors"
                />
              </button>
            </div>
          </div>
        </div>

        <div id="vs_result" class="versus"></div>

        <div class="janken">
          <div class="janken-title">
            <h2>COM</h2>
          </div>
          <div class="janken_choice">
            <div class="choice rock">
              <button>
                <img
                  height="128px"
                  width="128px"
                  src="./assets/batu.png"
                  alt="rock"
                />
              </button>
            </div>
            <div class="choice paper">
              <button>
                <img
                  height="128px"
                  width="128px"
                  src="./assets/kertas.png"
                  alt="paper"
                />
              </button>
            </div>
            <div class="choice scissors">
              <button>
                <img
                  height="128px"
                  width="128px"
                  src="./assets/gunting.png"
                  alt="scissors"
                />
              </button>
            </div>
          </div>
        </div>
        <!-- reset start -->
        <div class="reset">
          <button id="reset" type="reset">
            <img
              loading="lazy"
              width="68px"
              height="68px"
              src="assets/refresh.png"
              alt="reset"
            />
          </button>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script src="game.js"></script>
  </body>
</html>

